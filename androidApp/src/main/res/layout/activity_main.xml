<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout

        android:id="@+id/layoutLastestPhoto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000">

        <ImageView
            android:id="@+id/latestPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/collapsedMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/collapsed_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Çıkış"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/collapsedMenu"/>

            <LinearLayout

                android:id="@+id/linearLayout4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/cardViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="188dp"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:id="@+id/followersLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Takip"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/takipTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/cardViewLayout"
                        android:gravity="center"
                        android:orientation="vertical">


                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/userProfilPic"
                            android:layout_width="60dp"
                            android:layout_height="60dp"

                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:backgroundTintMode="add" />

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"

                            android:background="@drawable/progress_circle"
                            android:indeterminate="false"
                            android:indeterminateBehavior="repeat"
                            android:indeterminateDrawable="@drawable/progress_circle_indeterminate"
                            android:indeterminateDuration="1000"
                            android:indeterminateOnly="false"
                            android:visibility="invisible"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/followingLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Takipçi"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/takipciTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>


                <android.support.v4.view.ViewPager
                    android:id="@+id/main_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layoutStats"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <com.example.appinsta.CustomView
                                android:id="@+id/mutedStory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"

                                android:paddingTop="3dp"
                                android:paddingRight="3dp"
                                android:paddingBottom="3dp"
                                app:Condition="Hikayelerimi sessize alanlar"
                                app:Number="0"></com.example.appinsta.CustomView>

                            <com.example.appinsta.CustomView
                                android:id="@+id/latestPhotoLikers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:paddingTop="3dp"
                                android:paddingRight="3dp"
                                android:paddingBottom="3dp"
                                app:Condition="Son fotoğrafımı beğenmeyen takipçiler"
                                app:Number="0"></com.example.appinsta.CustomView>

                            <com.example.appinsta.CustomView
                                android:id="@+id/storyStalkers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:paddingTop="3dp"
                                android:paddingRight="3dp"
                                android:paddingBottom="3dp"
                                app:Condition="Hikayelerimi izleyip beni takip etmeyenler"
                                app:Number="0"></com.example.appinsta.CustomView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.appinsta.CustomView
                                android:id="@+id/userStalking"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:paddingLeft="3dp"
                                android:paddingTop="3dp"
                                android:paddingRight="3dp"
                                android:paddingBottom="3dp"
                                app:Condition="Geri takip etmediklerim"></com.example.appinsta.CustomView>


                            <com.example.appinsta.CustomView
                                android:id="@+id/userStalkers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:paddingTop="3dp"
                                android:paddingRight="3dp"
                                android:paddingBottom="3dp"
                                app:Condition="Beni geri takip etmeyenler"></com.example.appinsta.CustomView>


                            <com.example.appinsta.CustomView
                                android:id="@+id/userAction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:paddingTop="3dp"
                                android:paddingRight="3dp"
                                android:paddingBottom="3dp"
                                app:Condition="Kişi hareketleri"></com.example.appinsta.CustomView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutMedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/media"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v4.view.ViewPager>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemIconTint="@drawable/bottom_nav_colors"
            app:itemTextColor="@drawable/bottom_nav_colors"
            app:menu="@menu/bottom_navigation_menu">

        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>

</LinearLayout>